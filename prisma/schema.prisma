generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  shortDesc String
  coverUrl  String?
  body      String?
  tags      Tag[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tag {
  id       String    @id @default(cuid())
  name     String    @unique
  slug     String    @unique
  projects Project[]
}
